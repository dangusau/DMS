<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_90sdp"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:id="@+id/main_tab"
        android:background="@drawable/ractengle_stroke_round_white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:gravity="center"
            android:background="@drawable/ractengle_solid_round_white"
            android:layout_margin="@dimen/_3sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_product_image"
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_32sdp"
                android:layout_gravity="center"
                android:src="@drawable/ic_box"/>


            <TextView
                android:layout_marginTop="@dimen/_1sdp"
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:textAllCaps="false"
                android:text=""
                android:textColor="@color/newColorBlack"
                android:textSize="@dimen/_13ssp"
                android:textStyle="normal"
                android:maxLines="1"
                android:fontFamily="@font/clan_ot_narrowmedium"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:textAllCaps="false"
                android:text=""
                android:ellipsize="end"
                android:textColor="@color/newColorDarkHint"
                android:textSize="@dimen/_9ssp"
                android:textStyle="normal"
                android:fontFamily="@font/clan_ot_narrowmedium"
                android:gravity="center"
                />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/bottom_view"
            android:gravity="center"
            android:background="@drawable/ractengle_solid_round_primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">




            <TextView
                android:id="@+id/tv_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:textAllCaps="false"
                android:text=""
                android:paddingStart="@dimen/_15sdp"
                android:paddingEnd="@dimen/_15sdp"
                android:paddingTop="@dimen/_2sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:textColor="@color/newColorWhite"
                android:textSize="@dimen/_10ssp"
                android:textStyle="normal"
                android:fontFamily="@font/clan_ot_narrowmedium"
                android:gravity="center"
                />


        </LinearLayout>

    </RelativeLayout>

</FrameLayout>