<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"

        android:paddingStart="@dimen/_20sdp"
        android:paddingEnd="@dimen/_20sdp">

        <ImageView
            android:id="@+id/iv_location"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_location_gray"
            android:tint="@color/newColorDarkHint"
            />
        <LinearLayout
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toEndOf="@+id/iv_location"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_loc"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                android:includeFontPadding="false"
                android:text=""
                android:textColor="@color/newColorBlack"
                android:textSize="@dimen/_11ssp"
                android:textStyle="normal"
                android:fontFamily="@font/clan_ot_narrowmedium"
                android:gravity="center_vertical"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/tv_location_desc"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                android:includeFontPadding="false"
                android:text=""
                android:textColor="@color/newColorLightHint"
                android:textSize="@dimen/_11ssp"
                android:textStyle="normal"
                android:fontFamily="@font/clan_ot_narrowmedium"
                android:gravity="center_vertical"
                tools:ignore="RtlCompat" />

        </LinearLayout>




    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/newColorLightHintLine"
        />

</LinearLayout>
