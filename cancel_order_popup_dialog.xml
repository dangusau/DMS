<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_20sdp">

    <LinearLayout
        android:background="@drawable/less_round_edge_ractengle_white"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_3sdp"
        android:orientation="vertical"
        android:padding="@dimen/_15sdp"
       >
        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="@string/cancel_order_title"
            android:textColor="@color/newColorBlack"
            android:textSize="@dimen/_15ssp"
            android:textStyle="normal"
            android:fontFamily="@font/clan_ot_narrowmedium"
            android:gravity="center_vertical"
            />


        <TextView
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="@string/are_you_sure_to_cancel_order"
            android:textColor="@color/newColorDarkHint"
            android:textSize="@dimen/_10ssp"
            android:textStyle="normal"
            android:fontFamily="@font/clan_ot_narrowmedium"
            android:gravity="center_vertical"
            />




        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:translationX="-6dp"
                android:buttonTint="@color/newColorLightHint"
                android:id="@+id/ch_order_cancel_verify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:layout_gravity="center_vertical|start"
                android:text="@string/i_understand_and_want_to_cancel_order"
                android:textColor="@color/newColorLightHint"
                android:textSize="@dimen/_10ssp"
                android:textStyle="normal"
                android:fontFamily="@font/clan_ot_narrowmedium"
                android:gravity="center_vertical"
                />



        </LinearLayout>






        <LinearLayout
            android:gravity="center_vertical|end"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_order_cancel_no"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_37sdp"
                android:paddingEnd="@dimen/_20sdp"
                android:paddingStart="@dimen/_20sdp"
                android:includeFontPadding="false"
                android:textAllCaps="false"
                android:text="@string/no"
                android:textColor="@color/newColorPrimary"
                android:textSize="@dimen/_11ssp"
                android:textStyle="normal"
                android:fontFamily="@font/clan_ot_narrowmedium"
                android:gravity="center"
                />



            <TextView
                android:id="@+id/txt_order_cancel_yes"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_37sdp"
                android:paddingEnd="@dimen/_15sdp"
                android:paddingStart="@dimen/_20sdp"
                android:includeFontPadding="false"
                android:textAllCaps="false"
                android:text="@string/yes"
                android:textColor="@color/newColorLightHint"
                android:textSize="@dimen/_11ssp"
                android:textStyle="normal"
                android:fontFamily="@font/clan_ot_narrowmedium"
                android:gravity="center"
                />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>