<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/newColorBackground"
    android:id="@+id/clickless"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp">


        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:id="@+id/iv_back"
            android:paddingStart="@dimen/_20sdp"
            android:paddingEnd="@dimen/_20sdp"
            android:tint="@color/newColorBlack"
            android:layout_width="@dimen/_58sdp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_back_arrow"/>

        <TextView
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_35sdp"
            android:layout_marginEnd="@dimen/_35sdp"
            android:includeFontPadding="false"
            android:text="@string/change_password"
            android:textColor="@color/newColorBlack"
            android:textSize="@dimen/_11ssp"
            android:textStyle="normal"
            android:fontFamily="@font/clan_ot_narrowmedium"
            android:gravity="center"
            />



    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:paddingEnd="@dimen/_20sdp"
            android:paddingStart="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_marginTop="@dimen/_62sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="@string/change_your_password"
                    android:textColor="@color/newColorBlack"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="normal"
                    android:fontFamily="@font/clan_ot_narrowmedium"
                    android:gravity="center_vertical"
                    android:maxLines="3"
                    />



            </LinearLayout>



            <RelativeLayout
                android:layout_marginTop="@dimen/_32sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:background="@drawable/d_bottom_et_gray_line"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="@string/pass"
                        android:textColor="@color/newColorDarkHint"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="normal"
                        android:fontFamily="@font/clan_ot_narrowmedium"
                        android:gravity="center_vertical" />


                    <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            android:layout_toStartOf="@+id/ll_hide"
                            android:id="@+id/et_password"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_28sdp"
                            android:includeFontPadding="false"
                            android:textColorHint="@color/newColorLightHint"
                            android:hint="@string/dummy_password"
                            android:textColor="@color/newColorBlack"
                            android:text=""
                            android:importantForAutofill="no"
                            android:paddingTop="@dimen/_2sdp"
                            android:paddingBottom="@dimen/_2sdp"
                            android:background="@null"
                            android:textSize="@dimen/_10ssp"
                            android:inputType="textPassword"
                            android:textStyle="normal"
                            android:fontFamily="@font/clan_ot_narrownews"
                            android:gravity="center_vertical"
                            tools:ignore="RtlCompat"
                            android:textAlignment="viewStart"
                            />

                        <RelativeLayout
                            android:id="@+id/ll_hide"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_centerVertical="true">

                            <ImageView
                                android:id="@+id/iv_hide"
                                android:paddingTop="@dimen/_2sdp"
                                android:paddingBottom="@dimen/_2sdp"
                                android:layout_width="@dimen/_26sdp"
                                android:layout_height="@dimen/_26sdp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/ic_hide"
                                />

                        </RelativeLayout>

                    </RelativeLayout>


                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:background="@drawable/d_bottom_et_gray_line"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="@string/confirm_password"
                        android:textColor="@color/newColorDarkHint"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="normal"
                        android:fontFamily="@font/clan_ot_narrowmedium"
                        android:gravity="center_vertical"
                        />


                    <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            android:layout_toStartOf="@+id/ll_confirm_hide"
                            android:id="@+id/et_confirm_password"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_28sdp"
                            android:includeFontPadding="false"
                            android:textColorHint="@color/newColorLightHint"
                            android:hint="@string/dummy_password"
                            android:textColor="@color/newColorBlack"
                            android:text=""
                            android:importantForAutofill="no"
                            tools:ignore="RtlCompat"
                            android:textAlignment="viewStart"
                            android:paddingTop="@dimen/_2sdp"
                            android:paddingBottom="@dimen/_2sdp"
                            android:background="@null"
                            android:textSize="@dimen/_10ssp"
                            android:inputType="textPassword"
                            android:textStyle="normal"
                            android:fontFamily="@font/clan_ot_narrownews"
                            android:gravity="center_vertical"
                            />


                        <RelativeLayout
                            android:id="@+id/ll_confirm_hide"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_centerVertical="true">

                            <ImageView
                                android:id="@+id/iv_confirm_hide"
                                android:paddingTop="@dimen/_2sdp"
                                android:paddingBottom="@dimen/_2sdp"
                                android:layout_width="@dimen/_26sdp"
                                android:layout_height="@dimen/_26sdp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/ic_hide"
                                />

                        </RelativeLayout>

                    </RelativeLayout>



                </LinearLayout>


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/btn_reset_pass"
                android:layout_marginTop="@dimen/_32sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_38sdp"
                android:gravity="center"
                android:background="@drawable/ractengle_less_round_solid_primary"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:textAllCaps="false"
                    android:text="@string/change_password"
                    android:textColor="@color/newColorWhite"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="normal"
                    android:fontFamily="@font/clan_ot_narrowmedium"
                    android:gravity="center"
                    />


            </LinearLayout>




        </LinearLayout>


    </androidx.core.widget.NestedScrollView>



</RelativeLayout>