<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/newColorBackground"
    android:id="@+id/reg_fl_id"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp">

        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:id="@+id/iv_back"
            android:paddingStart="@dimen/_20sdp"
            android:paddingEnd="@dimen/_20sdp"
            android:tint="@color/newColorBlack"
            android:layout_width="@dimen/_58sdp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_back_arrow"/>

        <TextView
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_35sdp"
            android:layout_marginEnd="@dimen/_35sdp"
            android:includeFontPadding="false"
            android:text="@string/signup"
            android:textColor="@color/newColorBlack"
            android:textSize="@dimen/_11ssp"
            android:textStyle="normal"
            android:fontFamily="@font/clan_ot_narrowmedium"
            android:gravity="center"
            />



    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:paddingEnd="@dimen/_20sdp"
            android:paddingStart="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_marginTop="@dimen/_62sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="@string/welcome_back"
                    android:textColor="@color/newColorBlack"
                    android:textSize="@dimen/_19ssp"
                    android:textStyle="normal"
                    android:fontFamily="@font/clan_ot_narrowmedium"
                    android:gravity="center_vertical"
                    />

                <TextView
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="@string/signup_to_continue"
                    android:textColor="@color/newColorLightHint"
                    android:textSize="@dimen/_10ssp"
                    android:textStyle="normal"
                    android:fontFamily="@font/clan_ot_narrowmedium"
                    android:gravity="start"
                    />


            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:orientation="horizontal">

                <LinearLayout
                    android:background="@drawable/d_bottom_et_gray_line"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="4.5"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="@string/first_name"
                        android:textColor="@color/newColorDarkHint"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="normal"
                        android:fontFamily="@font/clan_ot_narrowmedium"
                        android:gravity="center_vertical"
                        />

                    <EditText
                        android:id="@+id/et_fname"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_28sdp"
                        android:includeFontPadding="false"
                        android:textColorHint="@color/newColorLightHint"
                        android:hint="@string/jhon"
                        android:text=""
                        android:importantForAutofill="no"
                        android:textColor="@color/newColorBlack"
                        android:inputType="textPersonName"
                        android:paddingTop="@dimen/_2sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        android:background="@null"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="normal"
                        android:fontFamily="@font/clan_ot_narrownews"
                        android:gravity="center_vertical"
                        tools:ignore="RtlCompat"
                        android:textAlignment="viewStart"
                        />



                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:background="@drawable/d_bottom_et_gray_line"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="4.5"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="@string/last_name"
                        android:textColor="@color/newColorDarkHint"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="normal"
                        android:fontFamily="@font/clan_ot_narrowmedium"
                        android:gravity="center_vertical"
                        />

                    <EditText
                        android:id="@+id/et_lname"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_28sdp"
                        android:includeFontPadding="false"
                        android:textColorHint="@color/newColorLightHint"
                        android:hint="@string/alex"
                        android:text=""
                        android:importantForAutofill="no"
                        android:textColor="@color/newColorBlack"
                        android:inputType="textPersonName"
                        android:paddingTop="@dimen/_2sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        android:background="@null"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="normal"
                        android:fontFamily="@font/clan_ot_narrownews"
                        android:gravity="center_vertical"
                        tools:ignore="RtlCompat"
                        android:textAlignment="viewStart"
                        />


                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:background="@drawable/d_bottom_et_gray_line"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="@string/your_email"
                    android:textColor="@color/newColorDarkHint"
                    android:textSize="@dimen/_10ssp"
                    android:textStyle="normal"
                    android:fontFamily="@font/clan_ot_narrowmedium"
                    android:gravity="center_vertical"
                    />

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_28sdp"
                    android:includeFontPadding="false"
                    android:textColorHint="@color/newColorLightHint"
                    android:hint="@string/jhonalexmail"
                    android:textColor="@color/newColorBlack"
                    android:text=""
                    android:importantForAutofill="no"
                    android:inputType="textEmailAddress"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:background="@null"
                    android:textSize="@dimen/_10ssp"
                    android:textStyle="normal"
                    android:fontFamily="@font/clan_ot_narrownews"
                    android:gravity="center_vertical"
                    tools:ignore="RtlCompat"
                    android:textAlignment="viewStart"
                    />


            </LinearLayout>


            <RelativeLayout
                android:background="@drawable/d_bottom_et_gray_line"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="@string/password"
                        android:textColor="@color/newColorDarkHint"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="normal"
                        android:fontFamily="@font/clan_ot_narrowmedium"
                        android:gravity="center_vertical"
                        />


                    <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            android:layout_toStartOf="@+id/ll_hide"
                            android:id="@+id/et_password"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_28sdp"
                            android:includeFontPadding="false"
                            android:textColorHint="@color/newColorLightHint"
                            android:hint="@string/dummy_password"
                            android:textColor="@color/newColorBlack"
                            android:text=""
                            android:importantForAutofill="no"
                            android:paddingTop="@dimen/_2sdp"
                            android:paddingBottom="@dimen/_2sdp"
                            android:background="@null"
                            android:textSize="@dimen/_10ssp"
                            android:inputType="textPassword"
                            android:textStyle="normal"
                            android:fontFamily="@font/clan_ot_narrownews"
                            android:gravity="center_vertical"
                            tools:ignore="RtlCompat"
                            android:textAlignment="viewStart"
                            />

                        <RelativeLayout
                            android:id="@+id/ll_hide"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_centerVertical="true">

                            <ImageView
                                android:id="@+id/iv_hide"
                                android:paddingTop="@dimen/_2sdp"
                                android:paddingBottom="@dimen/_2sdp"
                                android:layout_width="@dimen/_26sdp"
                                android:layout_height="@dimen/_26sdp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/ic_hide"
                                />

                        </RelativeLayout>

                    </RelativeLayout>



                </LinearLayout>



            </RelativeLayout>


            <LinearLayout
                android:background="@drawable/d_bottom_et_gray_line"
                android:id="@+id/tab_country"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="@string/country_of_residence"
                    android:textColor="@color/newColorDarkHint"
                    android:textSize="@dimen/_10ssp"
                    android:textStyle="normal"
                    android:fontFamily="@font/clan_ot_narrowmedium"
                    android:gravity="center_vertical"
                    />

                <EditText
                    android:id="@+id/tv_country"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_28sdp"
                    android:includeFontPadding="false"
                    android:textColorHint="@color/newColorLightHint"
                    android:hint="@string/london"
                    android:textColor="@color/newColorBlack"
                    android:text=""
                    android:cursorVisible="false"
                    android:importantForAutofill="no"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:background="@null"
                    android:textSize="@dimen/_10ssp"
                    android:inputType="textPersonName"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:textStyle="normal"
                    android:fontFamily="@font/clan_ot_narrownews"
                    android:gravity="center_vertical"
                    tools:ignore="RtlCompat"
                    android:textAlignment="viewStart"
                    />



            </LinearLayout>





            <LinearLayout
                android:id="@+id/btn_register"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_38sdp"
                android:gravity="center"
                android:background="@drawable/ractengle_less_round_solid_primary"
                android:orientation="vertical">

                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:textAllCaps="false"
                    android:text="@string/str_register"
                    android:textColor="@color/newColorWhite"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="normal"
                    android:fontFamily="@font/clan_ot_narrowmedium"
                    android:gravity="center"
                    />


            </LinearLayout>




        </LinearLayout>


    </androidx.core.widget.NestedScrollView>



</RelativeLayout>