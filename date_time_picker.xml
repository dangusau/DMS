<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:background="@color/newColorBackground">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/newColorBackground">

            <DatePicker
                android:theme="@style/datepicker"
                android:id="@+id/date_picker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:calendarViewShown="true"
                android:spinnersShown="false"/>

            <TimePicker
                android:theme="@style/datepicker"
                android:id="@+id/time_picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:timePickerMode="spinner"
                android:visibility="gone"
                android:focusable="false"
                android:focusableInTouchMode="false"/>

            <TextView
                android:id="@+id/textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:textAllCaps="false"
                android:text=""
                android:paddingStart="@dimen/_20sdp"
                android:paddingEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_marginBottom="@dimen/_40sdp"
                android:textColor="@color/newColorBlack"
                android:textSize="@dimen/_11ssp"
                android:textStyle="normal"
                android:fontFamily="@font/clan_ot_narrowmedium"
                android:gravity="center"
                android:visibility="gone"
                />

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/btn_datetime"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_38sdp"
            android:gravity="center"
            android:background="@drawable/ractengle_solid_primary"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_datetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:textAllCaps="false"
                android:text=""
                android:textColor="@color/newColorWhite"
                android:textSize="@dimen/_11ssp"
                android:textStyle="normal"
                android:fontFamily="@font/clan_ot_narrowmedium"
                android:gravity="center"
                />


        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_38sdp"
            android:gravity="center"
            android:background="@drawable/ractengle_solid_primary"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:textAllCaps="false"
                android:text="@string/okay"
                android:textColor="@color/newColorWhite"
                android:textSize="@dimen/_11ssp"
                android:textStyle="normal"
                android:fontFamily="@font/clan_ot_narrowmedium"
                android:gravity="center"
                />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>