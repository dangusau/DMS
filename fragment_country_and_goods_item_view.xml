<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_38sdp"
        android:paddingStart="@dimen/_20sdp"
        android:paddingEnd="@dimen/_20sdp">

        <TextView
            android:id="@+id/tv_listitem"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/iv_tick"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:includeFontPadding="false"
            android:text=""
            android:textColor="@color/newColorBlack"
            android:textSize="@dimen/_11ssp"
            android:textStyle="normal"
            android:fontFamily="@font/clan_ot_narrowmedium"
            android:gravity="center_vertical"
            tools:ignore="RtlCompat" />


        <ImageView
            android:id="@+id/iv_tick"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_tick_done"
            android:tint="@color/newColorBlack"
            android:visibility="gone"
           />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/newColorLightHintLine"
        />

</LinearLayout>